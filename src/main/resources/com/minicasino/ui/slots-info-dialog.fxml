<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<StackPane fx:id="topLevelLayout" xmlns:fx="http://javafx.com/fxml" stylesheets="@styles-dialog.css"
           fx:controller="com.minicasino.ui.SlotsInfoDialogController" id="outerBorder">
    <padding>
        <Insets right="10" left="10"/>
    </padding>
    <GridPane>
        <rowConstraints>
            <RowConstraints percentHeight="15"/>
            <RowConstraints percentHeight="65"/>
            <RowConstraints percentHeight="20"/>
        </rowConstraints>
        <HBox GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER">
            <Label fx:id="p0Title" text="PAY TABLE">
                <font>
                    <Font name="Arial" size="20"/>
                </font>
            </Label>
        </HBox>
        <GridPane GridPane.rowIndex="1" GridPane.columnIndex="0" hgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <VBox id="innerBorder" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.vgrow="ALWAYS" spacing="30">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
                <HBox alignment="CENTER">
                    <Label fx:id="p0leftTitleLabel" text="WILD">
                        <font>
                            <Font name="Arial Bold" size="20"/>
                        </font>
                    </Label>
                </HBox>
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label fx:id="p0leftHeaderLabel" text="WILD">
                        <font>
                            <Font name="Arial Bold" size="15"/>
                        </font>
                    </Label>
                    <Label fx:id="p0leftContentLabel" wrapText="true">
                        <font>
                            <Font name="Arial" size="15"/>
                        </font>
                        WILD substitutes all symbols except FREE SPINS. It appears on all reels.
                    </Label>
                </VBox>
            </VBox>
            <VBox id="innerBorder" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.vgrow="ALWAYS" spacing="30">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
                <HBox alignment="CENTER">
                    <Label fx:id="p0rightTitleLabel" text="FREE SPINS">
                        <font>
                            <Font name="Arial Bold" size="20"/>
                        </font>
                    </Label>
                </HBox>
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label fx:id="p0rightHeaderLabel" text="FREE SPINS">
                        <font>
                            <Font name="Arial Bold" size="15"/>
                        </font>
                    </Label>
                    <Label fx:id="p0rightContentLabel" wrapText="true">
                        <font>
                            <Font name="Arial" size="15"/>
                        </font>
                        When 3 FREE SPINS symbols appear on the line, free spins start.
                    </Label>
                </VBox>
            </VBox>
        </GridPane>
        <VBox GridPane.rowIndex="2" GridPane.columnIndex="0">
            <padding>
                <Insets top="5"/>
            </padding>
            <HBox alignment="CENTER" spacing="5">
                <fx:define>
                    <ToggleGroup fx:id="toggleGroup"/>
                </fx:define>
                <RadioButton toggleGroup="$toggleGroup" scaleX="0.7" scaleY="0.7" selected="true"/>
                <RadioButton toggleGroup="$toggleGroup" scaleX="0.7" scaleY="0.7"/>
                <RadioButton toggleGroup="$toggleGroup" scaleX="0.7" scaleY="0.7"/>
            </HBox>
            <HBox alignment="CENTER">
                <Button fx:id="previousButton" prefHeight="Infinity">
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/navigation/Back24.gif"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="continueButton" text="CONTINUE" onAction="#handleContinueButton" prefHeight="Infinity">
                    <font>
                        <Font name="Arial Bold" size="15"/>
                    </font>
                </Button>
                <Button fx:id="nextButton" prefHeight="Infinity">
                    <graphic>
                        <ImageView>
                            <Image url="@/toolbarButtonGraphics/navigation/Forward24.gif"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </GridPane>
</StackPane>
