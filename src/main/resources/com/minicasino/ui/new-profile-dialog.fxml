<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>
<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.minicasino.ui.NewProfileDialogController">
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Edit profile name: " GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="RIGHT"/>
            <TextField fx:id="profileNameTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Balance: " GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="RIGHT"/>
            <Label fx:id="balanceLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Highest win: " GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="RIGHT"/>
            <Label fx:id="highestWinLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
