    <right>
        <GridPane BorderPane.alignment="CENTER" alignment="CENTER" maxWidth="100">
            <padding>
                <Insets bottom="10" top="10"/>
            </padding>
            <rowConstraints>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="20"/>
            </rowConstraints>
            <columnConstraints>
                <ColumnConstraints percentWidth="100"/>
            </columnConstraints>
            <Label fx:id="wildInfoLabel" id="infoIcons" text="x25 (WILD)" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   prefWidth="Infinity" alignment="CENTER" contentDisplay="TOP">
                <padding>
                    <Insets top="5" bottom="5" left="5" right="5"/>
                </padding>
                <font>
                    <Font name="Arial bold" size="15"/>
                </font>
                <graphic>
