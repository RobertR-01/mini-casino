                    <Label fx:id="reel1pos4"/>
                    <Label id="translucentRow" prefHeight="Infinity" prefWidth="Infinity"/>
                </StackPane>
            </GridPane>
            <GridPane fx:id="reel2" id="reel2Outline" prefWidth="100">
                <columnConstraints>
                    <ColumnConstraints percentWidth="100"/>
