            <padding>
                <Insets bottom="20" top="20"/>
            </padding>
            <GridPane fx:id="reel0" id="reel0Outline" prefWidth="100">
                <columnConstraints>
                    <ColumnConstraints percentWidth="100"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints percentHeight="20"/>
                    <RowConstraints percentHeight="20"/>
                    <RowConstraints percentHeight="20"/>
                    <RowConstraints percentHeight="20"/>
                    <RowConstraints percentHeight="20"/>
                </rowConstraints>
                <StackPane GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="CENTER">
                    <Label fx:id="reel0pos0"/>
                    <Label id="translucentRow" prefHeight="Infinity" prefWidth="Infinity"/>
                </StackPane>
                <Label fx:id="reel0pos1" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER"/>
                <Label fx:id="reel0pos2" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="CENTER"/>
                <Label fx:id="reel0pos3" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="CENTER"/>
                <StackPane GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="CENTER">
                    <Label fx:id="reel0pos4"/>
                    <Label id="translucentRow" prefHeight="Infinity" prefWidth="Infinity"/>
                </StackPane>
            </GridPane>
            <GridPane fx:id="reel1" id="reel1Outline" prefWidth="100.0">
                <columnConstraints>
                    <ColumnConstraints percentWidth="100"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints percentHeight="20"/>
                    <RowConstraints percentHeight="20"/>
                    <RowConstraints percentHeight="20"/>
                    <RowConstraints percentHeight="20"/>
                    <RowConstraints percentHeight="20"/>
                </rowConstraints>
                <StackPane GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="CENTER">
