                <graphic>
                    <ImageView fitWidth="30" fitHeight="30">
                        <Image url="set_two/meat48.png"/>
                    </ImageView>
                </graphic>
            </Label>
            <Label id="infoIcons" text="x3" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="Infinity"
                   alignment="CENTER" contentDisplay="TOP">
